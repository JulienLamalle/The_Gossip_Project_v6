<div class="container text-center">
  <h1 style="padding: 15px 0">Editer le commentaire</h1>
  <%= form_for edit_gossip_comment_path(:gossip_id ,:comment_id) do |f| %>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div class="form-group">
      <label>Contenu du commentaire</label>
      <%= f.text_area :content, :value => @comment.content, class: 'form-control'%>
    </div>
    <button type="submit" class="btn btn-danger align-center">Valider</button>
  <% end %>
</div>
